{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/manuelcarbajo/datascout/master/assets/schema_input.json", 
    "title": "datascout - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "genome": {
                "type": "string",
                "description": "GCA accession for submitted genome"
            },
            "species_name": {
                "type": "string",
                "description": "Genome taxonomy"
            },
            "taxid": {
                "type": "integer",
                "description": "Genome taxid NCBI"
            },
            "orthodb": {
                "type": "string",
                "description": "Lowest tax level for orthodb",
                "default": "default"
            },
            "uniprot": {
                "type": "string",
                "description": "Lowest tax level for uniprot",
                "default": "default"
            },
            "rfam": {
                "type": "string",
                "errorMessage": "Lowest tax level for rfam",
                "default": "default"
            },
            "uniprot_evidence": {
                "type": "integer",
                "description": "Preferred uniprot evidence level",
                "default": 2
            }
            
        },
        "required": ["genome","species_name", "taxid"]
    }
}