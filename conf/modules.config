/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Config file for defining DSL2 per module options and publishing paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Available keys to override module options:
        ext.args   = Additional arguments appended to command in module.
        ext.args2  = Second set of arguments appended to command in module (multi-tool modules).
        ext.args3  = Third set of arguments appended to command in module (multi-tool modules).
        ext.prefix = File name prefix for output files.
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/


process {

    //
    // Local modules
    //

    errorStrategy = { task.exitStatus in ((130..145) + 104) ? 'retry' : 'finish' }
    maxRetries = 2


    withName: DOWNLOAD_FASTQ_FILES {
        publishDir = [
            path: { "${params.outdir}" },
            mode: params.publish_dir_mode,
        ]
        
    }

    withName: ENA_RNA_CSV {
        publishDir = [
            path: { "${params.outdir}" },
            mode: params.publish_dir_mode,
        ]
        ext.args = ''
    }

    withName: GENOME_ASSEMBLY {
        publishDir = [
            path: { "${params.outdir}" },
            mode: params.publish_dir_mode,
        ]
        maxForks = 1
        ext.args = ''
    }

    withName: GET_CONTAINMENT {
        publishDir = [
            path: { "${params.outdir}" },
            mode: params.publish_dir_mode,
        ]
        ext.args = ''
    }

    withName: NCBI_ORTHODB {
        publishDir = [
            path: { "${params.outdir}" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        maxForks = 3
        ext.args = ''
    }

    withName: TAX_LINEAGE {
        publishDir = [
            path: { "${params.outdir}" },
            mode: params.publish_dir_mode,
            pattern: "*tax_ranks.tsv",
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        ext.args = ''
    }

    withName: PUBLISH_RUNS {
        publishDir = [
            path: { "${params.outdir}" },
            mode: params.publish_dir_mode,
        ]
        ext.args = ''
    }

    withName: RFAM_ACCESSIONS {
        publishDir = [
            path: { "${params.outdir}" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        ext.args = ''
    }

    withName: SOURMASH_GATHER {
        publishDir = [
            path: { "${params.outdir}" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        ext.args = ''
    }

    withName: SOURMASH_SKETCH_GENOME {
        ext.args = 'dna --param-string "scaled=1000,k=21,k=31,k=51"'
        ext.prefix = { "${meta.id}" }
        publishDir = [
            path: { "${params.outdir}/sourmash/genome_sketches" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: SOURMASH_SKETCH_FASTQ {
        ext.args = 'dna --param-string "k=31,abund"'
        ext.prefix = { "${meta.run_id}" }
        publishDir = [
            path: { "${params.outdir}/sourmash/fastq_sketches" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: UNIPROT_DATA {
        publishDir = [
            path: { "${params.outdir}" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        ext.args = ''
    }

}